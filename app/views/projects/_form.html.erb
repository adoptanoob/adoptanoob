<%= form_for @project, :html => {:multipart => true} do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name %>

  <%= f.label :body, "Description" %><br />
  <%= f.text_area :body %><br /> 

<% number = 0 %>
<div id="skills">
 <%= render partial: "skills/form",
            locals: {number: number} %>

<%= link_to_add_fields "Add another skill", f, :skills %>
</div>
<div class="image">
 <%=  f.file_field :image %>
</div>

  <%= f.submit %>


<% end %>

